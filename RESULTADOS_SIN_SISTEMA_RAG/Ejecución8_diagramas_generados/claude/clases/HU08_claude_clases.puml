@startuml
class Student {
    - studentId: String
    - name: String
    - email: String
    + enrollInCourse(course: Course): boolean
    + dropCourse(course: Course): boolean
}

class Course {
    - courseId: String
    - courseName: String
    - capacity: int
    + addStudent(student: Student): boolean
    + removeStudent(student: Student): boolean
}

class Enrollment {
    - enrollmentId: String
    - enrollmentDate: Date
    - status: String
    + cancel(): boolean
    + modify(): boolean
}

Student "1" --> "*" Enrollment
Course "1" --> "*" Enrollment
Enrollment --> Student
Enrollment --> Course
@enduml